<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="1.5dp"
    android:layout_marginBottom="1.5dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        android:id="@+id/view2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/card_layout">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/download"
                    app:civ_border_width="3dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shown_details_approval"
                android:layout_toRightOf="@+id/profile"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rimmy Will - My Leave"
                    android:id="@+id/name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/request"
                    android:textSize="12dp"
                    android:text="Request for annual leave approval"
                    android:layout_below="@+id/name" />
                <Button
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@mipmap/down_arrow_icon"
                    android:id="@+id/approval_down_arrow"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hidden_details_approval"
                android:layout_below="@+id/shown_details_approval"
                android:layout_toRightOf="@+id/profile"
                android:layout_marginTop="7dp"
                android:visibility="visible">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/due_icon"
                    android:layout_marginTop="1dp"
                    android:id="@+id/due_time_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due on 23 June 2018"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/due_time_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#1fb5fe"
                    android:layout_height="wrap_content"
                    android:text="5 Days"
                    android:textStyle="bold"
                    android:layout_below="@+id/due_time_img"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:id="@+id/days_left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 01 - November 05 2018"
                    android:textSize="12dp"
                    android:id="@+id/date"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/days_left"
                    android:layout_marginBottom="5dp"/>
                <ProgressBar
                    android:layout_width="280dp"
                    android:layout_height="6dp"
                    android:id="@+id/progress"
                    android:visibility="visible"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="#FFF9DF44"
                    android:layout_below="@+id/date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 annual leaves remaining"
                    android:textSize="10dp"
                    android:id="@+id/tv"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/progress"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/accept_button"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/approved_button"
                    android:layout_below="@+id/tv"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/cancel"
                    android:background="@mipmap/reject_button"
                    android:layout_toRightOf="@+id/accept_button"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/tv"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/help"
                    android:background="@mipmap/clarification_button"
                    android:layout_toRightOf="@+id/cancel"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/tv"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>