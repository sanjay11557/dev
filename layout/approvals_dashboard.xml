<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/approval_toolbar"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/approval_toolbar_row1"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_icon"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/toolbar_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approvals"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/toolbar_logo"
                android:layout_marginLeft="40dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/notification"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp" />
            <ImageView1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logout"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/approval_toolbar_row2"
            android:layout_below="@+id/approval_toolbar_row1">
            <android.support.v7.widget.CardView
                android:layout_width="190dp"
                android:layout_height="30dp"
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="#FF11214D"
                android:id="@+id/tab1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="15dp"
                        android:id="@+id/task_card"
                        app:cardBackgroundColor="#FF11214D">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Task"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#FF7B86A8"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="15dp"
                        android:layout_toRightOf="@id/task_card"
                        android:id="@+id/approval_card"
                        app:cardBackgroundColor="#FFF9DF44">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Approvals"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textColor="#FF11214D" />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:textColor="#fff"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/approval_body"
        android:layout_below="@+id/approval_toolbar"
        android:layout_centerVertical="true">
        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="#FFE5E5E5"
            android:id="@+id/tab2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:id="@+id/single_card"
                    app:cardBackgroundColor="#fff">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Single"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#FF11214D"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:id="@+id/bulk_card"
                    android:layout_toRightOf="@id/single_card"
                    app:cardBackgroundColor="#FFE5E5E5"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bulk"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#FF11214D" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Approvals"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:id="@+id/ta"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/circle"
            android:id="@+id/total_approval"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="16"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginTop="11dp"
            android:textColor="#fff"
            android:layout_marginRight="26dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear"
        android:layout_below="@+id/approval_body">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>